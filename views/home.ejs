<%- include("./include/header"); -%>

<h1>Home</h1>
<P> <%= startingContent %> </P>

<% posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>
    <% let truncatedContent = post.content.substring(0,100) + "..." %>
    <p><%= truncatedContent %></p>
    <a href="/posts/ <%= post.title %>">Read more.</a>
<% }) %>

